{
    "env": {
        "browser": true,
        "commonjs": true,
        "jest": true,
        "jquery": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": [ "prettier" ],
    "rules": {
        "max-len": ["error", {"code": 120}],
        "object-curly-spacing": [ "error", "never"],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "double" ],
        "semi": ["error", "never"],
        "prettier/prettier": ["error", {"printWidth": 120, "semi": false, "bracketSpacing": false}]
    }
}
